<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    //↓Theme.アプリ名=このアプリのテーマ　　↓その親がマテリアルデザイン
    <style name="Theme.Okhttp" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> //OSのダークテーマ設定がONかOFFかで暗い/明るいテーを自動切り替え
        <!-- Primary brand color.メインとなる色セット -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color.アクセントとなる色セット -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Okhttp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Okhttp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Okhttp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>